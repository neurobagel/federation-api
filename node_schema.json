{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "node": {
      "type": "object",
      "properties": {
        "ApiURL": {
          "type": "string",
          "pattern": "^(http|https)://"
        },
        "NodeName": {
          "type": "string"
        }
      },
      "required": ["ApiURL", "NodeName"],
      "additionalProperties": false
    }
  },
  "oneOf": [
    {
      "type": "array",
      "items": { "$ref": "#/definitions/node" },
      "minItems": 1
    },
    {
      "$ref": "#/definitions/node"
    }
  ]
}